#!/bin/sh

sleep 2 # wait a little for devices to appear

mount /proc
mount -a

syslogd -C64
klogd -c5

echo 5 >/proc/sys/kernel/panic

modprobe brcmfmac

ifname=wlan0
wlanconf=/boot/$ifname.conf
if [ -f $wlanconf ]; then
    /usr/local/sbin/startwlan $ifname $wlanconf
fi

#XXX eventually this will be some form of getty
setsid -cw bash -l

umount -a
sync
