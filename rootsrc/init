#!/bin/sh

sleep 2 # wait a little for devices to appear

mount /proc
mount -a

syslogd -C64
klogd -c5

echo 5 >/proc/sys/kernel/panic

modprobe brcmfmac

(netd >/dev/null 2>&1 &)

/usr/local/sbin/startdocker

#XXX eventually this will be some form of getty
setsid -cw bash -l

netd -k
umount -a
sync
